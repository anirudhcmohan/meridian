# Scrapers Service Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
# For local development with Docker: postgresql://postgres:postgres@localhost:5432/meridian
# For Supabase: Get from your Supabase project settings
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/meridian"

# Google AI Configuration (for article analysis)
GOOGLE_API_KEY="your_google_ai_api_key_here"
GOOGLE_BASE_URL="https://generativelanguage.googleapis.com"

# Application Security (generate with: openssl rand -base64 32)
MERIDIAN_SECRET_KEY="your_secret_key_for_api_authentication"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Server Configuration
PORT=3000